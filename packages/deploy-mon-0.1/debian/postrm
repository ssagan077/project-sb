#!/bin/sh
# postrm script for deb-pckgs
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    purge|remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
     #[ -f /etc/nginx/sites-enabled/nginx-mon.conf ] && rm -f /etc/nginx/sites-enable/nginx_pckg.conf
     [ ! -f /etc/nginx/sites-enabled/default ] && ln -s /etc/nginx/sites-available/default /etc/nginx/sites-enabled/default
     [ -f /etc/default/prometheus_bak ] && mv /etc/default/prometheus_bak /etc/default/prometheus
     [ -f /etc/default/prometheus-node-exporter_bak ] && mv /etc/default/prometheus-node-exporter_bak /etc/default/prometheus-node-exporter
     [ -f /etc/default/prometheus-alertmanager_bak ] && mv /etc/default/prometheus-alertmanager_bak /etc/default/prometheus-alertmanager
     [ -f /etc/default/prometheus-nginx-exporter_bak ] && mv /etc/default/prometheus-nginx-exporter_bak /etc/default/prometheus-nginx-exporter
     [ -f /etc/default/prometheus-blackbox-exporter_bak ] && mv /etc/default/prometheus-blackbox-exporter_bak /etc/default/prometheus-blackbox-exporter
     [ -f /etc/prometheus/prometheus.yml_bak ] && mv /etc/prometheus/prometheus.yml_bak /etc/prometheus/prometheus.yml
     [ -f /etc/prometheus/alertmanager.yml_bak ] && mv /etc/prometheus/alertmanager.yml_bak /etc/prometheus/alertmanager.yml
     [ -f /etc/prometheus/rules.yml_bak ] && mv /etc/prometheus/rules.yml_bak /etc/prometheus/rules.yml
     [ -f /etc/prometheus/blackbox.yml_bak ] && mv /etc/prometheus/blackbox.yml_bak /etc/prometheus/blackbox.yml
    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
