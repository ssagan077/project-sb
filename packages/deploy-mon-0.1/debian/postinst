#!/bin/sh
# postinst script for deb-pckgs
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
        #sysctl -p
        [ ! -d /etc/prometheus/ssl ] && mkdir -p /etc/prometheus/ssl
        #[ -d /etc/prometheus/ssl ] && chown prometheus:prometheus /etc/prometheus/ssl
        [ -f /etc/default/prometheus ] && mv /etc/default/prometheus /etc/default/prometheus_bak
        [ -f /etc/default/prometheus-node-exporter ] && mv /etc/default/prometheus-node-exporter /etc/default/prometheus-node-exporter_bak
        [ -f /etc/default/prometheus-alertmanager ] && mv /etc/default/prometheus-alertmanager /etc/default/prometheus-alertmanager_bak
        [ -f /etc/default/prometheus-nginx-exporter ] && mv /etc/default/prometheus-nginx-exporter /etc/default/prometheus-nginx-exporter_bak
        [ -f /etc/default/prometheus-blackbox-exporter ] && mv /etc/default/prometheus-blackbox-exporter /etc/default/prometheus-blackbox-exporter_bak
        [ -f /etc/default/prometheus_mon ] && mv /etc/default/prometheus_mon /etc/default/prometheus
        [ -f /etc/default/prometheus-node-exporter_mon ] && mv /etc/default/prometheus-node-exporter_mon /etc/default/prometheus-node-exporter
        [ -f /etc/default/prometheus-alertmanager_mon ] && mv /etc/default/prometheus-alermanager_mon /etc/default/prometheus-alertmanager
        [ -f /etc/default/prometheus-nginx-exporter_mon ] && mv /etc/default/prometheus-nginx-exporter_mon /etc/default/prometheus-nginx-exporter
        [ -f /etc/default/prometheus-blackbox-exporter_mon ] && mv /etc/default/prometheus-blackbox-exporter_mon /etc/default/prometheus-blackbox-exporter
        [ -f /etc/prometheus/prometheus.yml ] && mv /etc/prometheus/prometheus.yml /etc/prometheus/prometheus.yml_bak
        [ -f /etc/prometheus/alertmanager.yml ] && mv /etc/prometheus/alertmanager.yml /etc/prometheus/alertmanager.yml_bak
        [ -f /etc/prometheus/rules.yml ] && mv /etc/prometheus/rules.yml /etc/prometheus/rules.yml_bak
        [ -f /etc/prometheus/blackbox.yml ] && mv /etc/prometheus/blackbox.yml /etc/prometheus/blackbox.yml_bak
        [ -f /etc/prometheus/prometheus_mon.yml ] && mv /etc/prometheus/prometheus_mon.yml /etc/prometheus/prometheus.yml
        [ -f /etc/prometheus/alertmanager_mon.yml ] && mv /etc/prometheus/alertmanager_mon.yml /etc/prometheus/alertmanager.yml
        [ -f /etc/prometheus/rules_mon.yml ] && mv /etc/prometheus/rules_mon.yml /etc/prometheus/rules.yml
        [ -f /etc/prometheus/blackbox_mon.yml ] && mv /etc/prometheus/blackbox_mon.yml /etc/prometheus/blackbox.yml
        #[ -f /etc/nginx/sites-enabled/nginx-mon.conf ] && ln -s /etc/nginx/sites-available/nginx-mon.conf /etc/nginx/sites-enabled/nginx-mon.conf
        invoke-rc.d prometheus stop
        invoke-rc.d prometheus-node-exporter stop
        invoke-rc.d prometheus-nginx-exporter stop
        invoke-rc.d prometheus-blackbox-exporter stop
        invoke-rc.d nginx stop
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
